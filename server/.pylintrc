[MASTER]
# pydanticでエラーになるのを防ぐ
# https://github.com/samuelcolvin/pydantic/issues/1961#issuecomment-759522422
extension-pkg-whitelist=pydantic

# pylintrcを設定すると、pylintのデフォルトルール（pylintUseMinimalCheckers）がオフになるので手動で設定する
# https://code.visualstudio.com/docs/python/linting#_default-pylint-rules
disable=all
enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,
      unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode
